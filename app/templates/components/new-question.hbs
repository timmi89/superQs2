{{#if addNewQuestion}}
<h1>excuse me, i have a new question</h1>
   <div>
     <form>
       <div class="form-group">
         <label for="author">author</label>
         {{input value=author id="author"}}
       </div>

       <div class="form-group">
         <label for="content">content</label>
         {{input value=content id="content"}}
       </div>

       <div class="form-group">
         <label for="note">note</label>
         {{input value=note id="note"}}
       </div>
       <button {{action 'save1'}}>save</button>
     </form>
   </div>
{{else}}
  <button {{action 'questionFormShow'}}>new question</button>
{{/if}}

